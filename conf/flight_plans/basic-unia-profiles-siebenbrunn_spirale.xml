<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="600" ground_alt="500" lat0="48.318194" lon0="10.918778" max_dist_from_home="500" name="Basic" security_height="50" qfu="180">
  <header>
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint height="100." name="HOME" x="-15.0" y="-5.0"/>
    <waypoint height="100.0" name="STDBY" x="-30.0" y="-60.0"/>
    <waypoint height="50.0" name="SPIRALE" x="-10.0" y="-60.0"/>
 <!--   <waypoint height="100.0" name="2" x="-10.9" y="-60.3"/>  
    <waypoint height="150.0" name="3" x="-10.9" y="-60.3"/>
    <waypoint height="200.0" name="4" x="-10.9" y="-60.3"/>
    <waypoint height="250.0" name="5" x="-10.9" y="-60.3"/>
    <waypoint height="300.0" name="6" x="-10.9" y="-60.3"/> -->
    <waypoint height="20.0" name="AF" x="50" y="-40.0"/>
    <waypoint height="0.0" name="TD" x="50.0" y="40.0"/> 
    <waypoint name="_BASELEG" x="63.1" y="-34.5"/> 
    <waypoint height="300.0" name="CLIMB" x="0" y="-70"/>
    <waypoint height="50.0" name="lower" x="-20" y="-80"/>
    <waypoint height="300.0" name="upper" x="-20" y="-80"/>
  </waypoints>
  <exceptions>
    <!--exception cond="datalink_time > 22" deroute="Standby"/-->
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <set value="1" var="kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <!--set var="nav_mode" value="NAV_MODE_ROLL"/-->
      <set value="1" var="kill_throttle"/>
      <attitude roll="0" throttle="0" vmode="throttle"/>
    </block>


    <block key="t" name="Takeoff" strip_button="Takeoff (wp CLIMB)" strip_icon="takeoff.png" group="home">
      <exception cond="GetPosAlt() > ground_alt+25" deroute="Standby"/>
      <set value="0" var="kill_throttle"/>
      <set value="0" var="autopilot_flight_time"/>
      <go from="HOME" throttle="0.8" vmode="throttle" wp="CLIMB" pitch="30"/>
    </block>

    <block key="Ctrl+a" name="Standby" strip_button="Standby" strip_icon="home.png" group="home">
      <circle radius="nav_radius" wp="STDBY"/>
    </block>


    <block group="meteo"  name="climb" strip_button="climb" strip_icon="up.png">
      <exception cond="GetPosAlt() > ground_alt+300" deroute="descent"/>
      <circle pitch="70" radius="50" wp="upper" throttle="1.0" vmode="throttle"/>
    </block>
    <block group="meteo"  name="descent" strip_button="descent" strip_icon="down.png">
      <exception cond="ground_alt+50 > GetPosAlt()" deroute="climb"/>
      <circle pitch="0.0" radius="50" wp="lower" throttle="0.0" vmode="throttle"/>
    </block>
   
    <block group="spirale" name="climb_1" strip_button="climb_1" strip_icon="up_profile.png">
     <for var="i" from="1" to="6">
     <circle wp="SPIRALE" radius="50" alt="ground_alt+50*$i" until="stage_time>60"/>
     </for>
     <deroute block="descent_1"/>
    </block>
    <block group="spirale" name="descent_1" strip_button="descent_1" strip_icon="down_profile.png">
     <exception cond="ground_alt+40 > GetPosAlt()" deroute="climb_1"/>
      <circle wp="SPIRALE" pitch="0.0" radius="50" throttle="0.0" vmode="throttle"/>
    </block>

<!--   <block group="speed" name="climb_2" strip_button="climb_2" strip_icon="up_profile_l.png">
    <circle wp="1" radius="70" vmode="throttle" throttle="0.5" until="stage_time>60"/>
    <circle wp="2" radius="70" vmode="throttle" throttle="0.5" until="stage_time>60"/>
    <deroute block="descent_2"/>
   </block>
   <block group="speed" name="descent_2" strip_button="descent_1" strip_icon="down_profile_l.png">
     <exception cond="ground_alt+40 > GetPosAlt()" deroute="climb_2"/>
      <circle wp="1" pitch="0.0" radius="50" throttle="0.0" vmode="throttle"/>
    </block>
-->
    <block name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png" group="land">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>

    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="ground_alt + 10 > GetPosAlt()" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
