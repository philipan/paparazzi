<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="550" ground_alt="500" lat0="48.33055" lon0="10.88945" max_dist_from_home="500" name="Iller_Altusried" qfu="180" security_height="25">
  <header>
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint lat="48.33055" lon="10.88945" name="HOME"/>
    <waypoint lat="48.33050" lon="10.88940" name="STDBY"/>
    <waypoint lat="48.329320" lon="10.889611" name="Aufstieg"/>
    <waypoint lat="48.32864" lon="10.89010" name="Anflug1"/>
    <waypoint lat="48.327769" lon="10.890980" name="Anflug2"/>
    <waypoint lat="48.327776" lon="10.889656" name="Punkt1"/>
    <waypoint lat="48.328685" lon="10.888813" name="Punkt2"/>
    <waypoint lat="48.329874" lon="10.888452" name="Punkt3"/>
    <waypoint lat="48.331209" lon="10.888355" name="Punkt4"/>
    <waypoint lat="48.332289" lon="10.888452" name="Punkt5"/>
    <waypoint lat="48.331373" lon="10.889352" name="Abstieg1"/>
    <waypoint lat="48.329755" lon="10.889548" name="Abstieg2"/>
  </waypoints>
  <blocks>
    <block name="Waiting for GPS fix">
      <set value="1" var="kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Waiting for Remote Control">
      <while cond="RCLost()"/>
    </block>
    <block name="Unlock throttle">
      <set value="1" var="launch"/>
      <set value="0" var="kill_throttle"/>
      <set value="0" var="autopilot_flight_time"/>
      <go from="HOME" pitch="45" throttle="0.60" until="GetPosAlt() > ground_alt+0050" vmode="throttle" wp="Aufstieg"/>
    </block>
    <block name="Anflug">
      <exception cond="10 > PowerVoltage()" deroute="Standby"/>
      <go approaching_time="0" from="Aufstieg" hmode="route" throttle="0.20" wp="Anflug1"/>
      <go wp="Anflug2"/>
    </block>
    <block name="Aufnahme">
      <exception cond="10 > PowerVoltage()" deroute="Standby"/>
      <exception cond="(ground_alt+0030 > GetPosAlt())" deroute="Standby"/>
      <path approaching_time="0" throttle="0.10" wpts="Punkt1, Punkt2, Punkt3, Punkt4, Punkt5"/>
    </block>
    <block name="Landung">
      <while cond="TRUE">
        <go approaching_time="1" wp="Abstieg1"/>
        <go alt="ground_alt+0050" approaching_time="1" from="Abstieg1" hmode="route" throttle="0.10" vmode="throttle" wp="Abstieg2"/>
      </while>
    </block>
    <block name="Standby">
      <circle alt="ground_alt+0100" radius="50" wp="STDBY"/>
    </block>
  </blocks>
</flight_plan>
