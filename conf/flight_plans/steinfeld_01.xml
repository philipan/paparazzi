<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<flight_plan alt="400" ground_alt="295" lat0="49.949939" lon0="9.654150" max_dist_from_home="500" name="Basic" qfu="180" security_height="100">
  <header>
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint height="100.0" name="HOME" x="0.0" y="0.0"/>
    <waypoint height="100.0" name="STDBY" x="-30" y="10"/>
    <waypoint height="500.0" name="CLIMB" x="-40" y="-150"/>
    <waypoint height="25.0" name="AF" x="-75" y="-170.0"/>
    <waypoint height="20.0" name="TD" x="-75" y="-15.0"/>
    <waypoint height="100.0" name="1" x="-200" y="0.0"/>
    <waypoint height="100.0" name="2" x="200" y="0.0"/>
    <waypoint height="50.0" name="3" x="50" y="0"/>
    <waypoint height="70.0" name="F81" x="0" y="-40"/>
    <waypoint height="70.0" name="F82" x="-70" y="-40"/>
    <waypoint height="100." name="MOB" x="52.7" y="-84.7"/>
    <waypoint height="150." name="S1" x="-200.0" y="-150.0"/>
    <waypoint alt="600.0" name="S2" x="216.4" y="63.7"/>
    <waypoint name="_BASELEG" x="-85" y="40"/>
    <waypoint height="30.0" name="lower" x="-50" y="-100"/>
    <waypoint height="500.0" name="upper" x="-50" y="-100"/>
  </waypoints>
  <exceptions/>
  <blocks>

    <block name="Wait GPS">
      <set value="1" var="kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <set value="1" var="kill_throttle"/>
      <attitude roll="0" throttle="0" vmode="throttle"/>
    </block>


    <block group="home" key="t" name="Takeoff" strip_button="Takeoff (wp CLIMB)" strip_icon="takeoff.png">
      <exception cond="GetPosAlt() > ground_alt+40" deroute="Standby"/>
      <set value="0" var="kill_throttle"/>
      <set value="0" var="autopilot_flight_time"/>
      <go from="S1" pitch="30" throttle="1.0" vmode="throttle" wp="CLIMB"/>
    </block>


    <block group="home" key="Ctrl+a" name="Standby" strip_button="Standby" strip_icon="home.png">
      <circle radius="nav_radius" wp="STDBY"/>
    </block>


    <block group="meteo" name="climb" strip_button="climb" strip_icon="up.png">
      <exception cond="GetPosAlt() > ground_alt+300" deroute="descent"/>
      <circle climb="1.0" radius="45" vmode="climb" wp="upper"/>
    </block>
    <block group="meteo" name="descent" strip_button="Descent" strip_icon="down.png">
      <exception cond="ground_alt+15 > GetPosAlt()" deroute="climb"/>
      <circle climb="-0.1" radius="45" vmode="climb" wp="lower"/>
    </block>


    <block group="base_pattern" key="F8" name="Figure 8 around F81" strip_button="Figure 8 (wp F81-F82)" strip_icon="eight.png">
      <eight center="F81" radius="nav_radius" turn_around="F82"/>
    </block>
    <block group="base_pattern" name="Oval F81-F82" strip_button="Oval (wp F81-F82)" strip_icon="oval.png">
      <oval p1="F81" p2="F82" radius="nav_radius"/>
    </block>
    <block group="base_pattern" name="MOB" strip_button="Circle around here" strip_icon="mob.png">
      <call fun="NavSetWaypointHere(WP_MOB)"/>
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <circle radius="nav_radius" wp="MOB"/>
    </block>
    <block group="extra_pattern" name="Survey S1-S2" strip_button="Survey (wp S1-S2)" strip_icon="survey.png">
      <survey_rectangle grid="150" wp1="S1" wp2="S2"/>
    </block>
    <block group="extra_pattern" name="Path 1,2" strip_button="Path (1,2)" strip_icon="path.png">
      <go from="1" hmode="route" vmode="glide" wp="2"/>
      <deroute block="Standby"/>
    </block>

    <block group="land" name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block group="land" name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land"/>
    </block>
    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>
    <block name="final">
      <exception cond="ground_alt + 10 > GetPosAlt()" deroute="flare"/>
      <go from="AF" hmode="route" vmode="glide" wp="TD"/>
    </block>
    <block name="flare">
      <go approaching_time="0" from="AF" hmode="route" throttle="0.0" vmode="throttle" wp="TD"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
