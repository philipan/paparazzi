<!DOCTYPE flight_plan SYSTEM "flight_plan.dtd">

<!--48.335991	10.897319-->


<flight_plan alt="600" ground_alt="497" lat0="48.327688" lon0="10.894272" max_dist_from_home="300" name="Basic" security_height="50" qfu="270">
  <header>
#include "subsystems/datalink/datalink.h"
</header>
  <waypoints>
    <waypoint height="100." name="HOME" x="0.0" y="0.0"/>
    <waypoint height="100.0" name="STDBY" x="-30" y="10"/>

    <waypoint height="25.0" name="AF" x="-120" y="0.0"/>
    <waypoint height="20.0" name="TD" x="-75" y="0.0"/>
    <waypoint height="5.0" name="1" x="-60" y="0"/>
    <waypoint height="0.0" name="2" x="-10" y="0"/>
    <waypoint height="50.0" name="3" x="50" y="0"/>

    <waypoint height="70.0" name="F81" x="0" y="-20"/>
    <waypoint height="70.0" name="F82" x="-70" y="-20"/>

    <waypoint height="100." name="MOB" x="52.7" y="-84.7"/>
    <waypoint height="150." name="S1" x="-100.0" y="-100.0"/>
    <waypoint height="150." name="S2" x="100.0" y="50.0"/>
    <waypoint name="_BASELEG" x="-85" y="40"/>
    <waypoint height="300.0" name="CLIMB" x="-120" y="10"/>
    <waypoint height="30.0" name="lower" x="-30" y="10"/>
    <waypoint height="300.0" name="upper" x="-30" y="10"/>
  </waypoints>
  <exceptions>
    <!--exception cond="datalink_time > 22" deroute="Standby"/-->
  </exceptions>
  <blocks>
    <block name="Wait GPS">
      <set value="1" var="kill_throttle"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 10)"/>
      <call fun="NavSetGroundReferenceHere()"/>
    </block>
    <block name="Holding point">
      <!--set var="nav_mode" value="NAV_MODE_ROLL"/-->
      <set value="1" var="kill_throttle"/>
      <attitude roll="0" throttle="0" vmode="throttle"/>
    </block>


    <block key="t" name="Takeoff" strip_button="Takeoff (wp CLIMB)" strip_icon="takeoff.png" group="home">
      <exception cond="GetPosAlt() > ground_alt+30" deroute="Standby"/>
      <set value="0" var="kill_throttle"/>
      <set value="0" var="autopilot_flight_time"/>
      <go from="HOME" throttle="0.8" vmode="throttle" wp="CLIMB" pitch="30"/>
    </block>

    <block key="Ctrl+a" name="Standby" strip_button="Standby" strip_icon="home.png" group="home">
      <circle radius="nav_radius" wp="STDBY"/>
    </block>


    <block group="meteo"  name="climb" strip_button="climb" strip_icon="up.png">
      <exception cond="GetPosAlt() > ground_alt+300" deroute="descent"/>
      <circle radius="45" wp="upper" climb="1.0" vmode="climb"/>
    </block>
    <block group="meteo"  name="descent" strip_button="Descent" strip_icon="down.png">
      <exception cond="ground_alt+15 > GetPosAlt()" deroute="climb"/>
      <circle radius="45" wp="lower" climb="0.1" vmode="climb"/>
    </block>

    <block key="F8" name="Figure 8 around F81" strip_button="Figure 8 (wp F81-F82)" strip_icon="eight.png" group="base_pattern">
      <eight center="F81" radius="nav_radius" turn_around="F82"/>
    </block>
    <block name="Oval F81-F82" strip_button="Oval (wp F81-F82)" strip_icon="oval.png" group="base_pattern">
      <oval p1="F81" p2="F82" radius="nav_radius"/>
    </block>

    <block name="MOB" strip_button="Circle around here" strip_icon="mob.png" group="base_pattern">
      <call fun="NavSetWaypointHere(WP_MOB)"/>
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <circle radius="nav_radius" wp="MOB"/>
    </block>

    <block name="Survey S1-S2" strip_button="Survey (wp S1-S2)" strip_icon="survey.png" group="extra_pattern">
      <survey_rectangle grid="150" wp1="S1" wp2="S2"/>
    </block>

    <block name="Path 1,2,AF,TD" strip_button="Path (1,2,AF,TD)" strip_icon="path.png" group="extra_pattern">
     <go from="1" hmode="route" vmode="glide" wp="2"/>
     <go from="2" hmode="route" vmode="glide" wp="AF"/>
     <go from="AF" hmode="route" vmode="glide" wp="TD"/>

      <!-- <path wpts="2,AF,TD" approaching_time="1" pitch="auto" throttle="0.0"/> -->
      <deroute block="Standby"/>
    </block>

<!--
    <block name="Land Right AF-TD" strip_button="Land right (wp AF-TD)" strip_icon="land-right.png" group="land">
      <set value="DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land_upper"/>
    </block>
-->

    <block name="Land Left AF-TD" strip_button="Land left (wp AF-TD)" strip_icon="land-left.png" group="land">
      <set value="-DEFAULT_CIRCLE_RADIUS" var="nav_radius"/>
      <deroute block="land_upper"/>
    </block>

    <block name="land">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>


    <block name="land_upper">
      <call fun="nav_compute_baseleg(WP_AF, WP_TD, WP__BASELEG, nav_radius)"/>
      <circle radius="nav_radius" until="NavCircleCount() > 0.5" wp="_BASELEG"/>
      <circle radius="nav_radius" until="And(NavQdrCloseTo(DegOfRad(baseleg_out_qdr)-(nav_radius/fabs(nav_radius))*10), 10 > fabs(GetPosAlt() - WaypointAlt(WP__BASELEG)))" wp="_BASELEG"/>
    </block>

    <block name="final">
      <exception cond="ground_alt + 10 > GetPosAlt()" deroute="final_lower"/>
      <go from="TD" hmode="route" vmode="alt" wp="1"/>
    </block>


    <block name="final_lower">
      <exception cond="ground_alt + 1 > GetPosAlt()" deroute="flare"/>
      <go from="1" hmode="route" vmode="alt" throttle="0.0" alt="ground_alt+1" wp="2" approaching_time="0"/>
   </block>


    <block name="flare">
      <go approaching_time="0" from="1" hmode="route" throttle="0.0" vmode="throttle" wp="2"/>
      <attitude roll="0.0" throttle="0.0" until="FALSE" vmode="throttle"/>
    </block>

  </blocks>
</flight_plan>
